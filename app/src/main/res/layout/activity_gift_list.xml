<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.liaohailong.pdftestapp.widget.gift.GiftList
        android:id="@+id/gift_list"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">

        <Button
            android:id="@+id/add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add" />

        <Button
            android:id="@+id/remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove" />
    </LinearLayout>

    <org.liaohailong.pdftestapp.widget.AvatarImageView
        android:id="@+id/act_bg"
        android:layout_width="567px"
        android:layout_height="319px"
        android:layout_margin="4px"
        android:scaleType="fitXY"
        android:src="@drawable/abc"
        app:border_type="round_rect"
        app:border_width="1px"
        app:radius_percent="0.02" />

</FrameLayout>